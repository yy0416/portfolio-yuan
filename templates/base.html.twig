<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Mon Portfolio
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600&family=Space+Grotesk:wght@400;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="{{ asset('css/style.css') }}"> {% block stylesheets %}{% endblock %}
		</head>


		<body class="dark-theme">
			<nav class="navbar navbar-expand-lg fixed-top">
				<div class="container">
					<a class="navbar-brand" href="{{ path('app_home') }}">{{ 'Portfolio'|trans }}</a>
					<div class="navbar-nav ms-auto">
						<a class="nav-link" href="{{ path('app_projects') }}">{{ 'Mes Projets'|trans }}</a>
						<a class="nav-link" href="{{ path('app_contact') }}">{{ 'Contact'|trans }}</a>
						<div class="language-selector">
							<a class="nav-link {% if app.request.locale == 'fr' %}active{% endif %}" href="{{ path('change_locale', {'locale': 'fr'}) }}">FR</a>
							<span class="separator">|</span>
							<a class="nav-link {% if app.request.locale == 'zh' %}active{% endif %}" href="{{ path('change_locale', {'locale': 'zh'}) }}">中文</a>
							<span class="separator">|</span>
							<a class="nav-link {% if app.request.locale == 'en' %}active{% endif %}" href="{{ path('change_locale', {'locale': 'en'}) }}">EN</a>
						</div>
					</div>
				</div>
			</nav>

			<div class="page-wrapper">
				<main>
					{% block body %}{% endblock %}
				</main>

				<footer>
					<div class="container text-center">
						<p>&copy; 2024 Yuan | Tous droits réservés</p>
					</div>
				</footer>
			</div>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
			{% block javascripts %}{% endblock %}

			<script>
				document.addEventListener('DOMContentLoaded', function () {
const navbar = document.querySelector('.navbar');
const footer = document.querySelector('footer');

function checkScroll() {
if (window.scrollY > 50) {
navbar.classList.add('scrolled');
footer.classList.add('scrolled');
} else {
navbar.classList.remove('scrolled');
footer.classList.remove('scrolled');
}
}

// Vérifier au chargement
checkScroll();

// Vérifier au défilement
window.addEventListener('scroll', checkScroll);
});
			</script>
		</body>
	</html>
